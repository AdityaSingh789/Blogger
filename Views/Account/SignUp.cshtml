@model Blogger.Models.ViewModel.SignUpUserViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@section Styles
    {
    <style type="text/css">
        body {
            background-color: lightgray;
        }

        h3 {
            color: black
        }
        .bgcl{
            background-color: dimgrey;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-secondary rounded pl-5 pr-5 pb-5 mt-2 bgcl">

            <div class="text-center mt-3">
                <h3>Register yourself with us</h3>
            </div>
            <h3 class="text-danger text-center">@TempData["errorMessage"]</h3>

            <form method="post" enctype="multipart/form-data" asp-action="Signup">

                <div class="form-group">
                   <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter your Username" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter your Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mobile"></label>
                    <input type="text" asp-for="Mobile" placeholder="Enter your Mobile Number" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <input type="text" asp-for="Gender" placeholder="Enter your Gender" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                <div class="row">
                    <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" asp-for="Password" placeholder="Set your Password" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                    </div>

                    <div class="col-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" asp-for="ConfirmPassword" placeholder="Enter your password again to confirm." class="form-control" autocomplete="off" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                    </div>
                </div>

    

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input type="text" asp-for="City" placeholder="Enter your City" class="form-control" autocomplete="off" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                            <label asp-for="Country"></label>
                            <input type="text" asp-for="Country" placeholder="Enter your Country" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
           
                <div class="form-group">
                        <label asp-for="IsActive"></label>
                        <input type="checkbox" asp-for="IsActive" checked="checked" class="mt-3"/>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-1 mt-3 float-right" value="Register"/>
                </div>
                
            </form>
        </div>
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>