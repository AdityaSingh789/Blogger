<Blogger.Models.ViewModel.BlogViewModel>
@{
    ViewData["Title"] = "Index";
}


@section Styles
{
    <style type="text/css">
        body{
            background-color:lightgray;
        }
        .heading{
            color:darkcyan
        }

            .hh {
                background-color: beige;
            }

        .card {
            display: flex;
            flex-direction: row;
            gap:30px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .container {
            margin-top: 20px;
            padding: 2px 16px;
        }

        .img {
           width: 50px;
           height: 50px;
           border-radius: 50%;
           overflow: hidden;
        }

        .blg{
            border: 2px thin black;
            padding:10px 15px 15px 15px;
            margin:10px 5px 10px 5px;
        }

        .Tag{
            border:2px solid black;
            border-radius:5px;
            width:80px;
            text-align:center;
            background-color:cadetblue;
            justify-content:center;
            
        }
        .cntnt{
            float:right;
        }
    </style>
}
<div>
    <h1 class="text-center heading">Blogs World</h1>
    <p class="text-center text-success">@TempData["Error"]</p>

        @foreach (var data in Model)
        {          
            <div class="container">
                <div class="row">
                    <div class="col-10 offset-1">
                        <div class="card">
                            <div class="card-body">                                    
                                   <h4 class="name"> <img class="img" src="data:image/png;base64,"> <b>@data.UserName</b></h4>
                                   <h2>@data.Title</h2>
                                   <p class="Tag">@data.Tag</p>
                                   <p class="cntnt">@data.Content</p>
                                   <br /> <br />     
                                   @if(User.Identity.IsAuthenticated && User.Identity.Name=="Admin"){
                                   <a class="btn btn-sm btn-warning" asp-controller="Blog" asp-action="Edit" asp-route-id="@data.Id">Edit</a>
                                   <a class="btn btn-sm btn-danger" onclick="return confirmDelete()" asp-controller="Blog" asp-action="Delete" asp-route-id="@data.Id">Delete</a>
                                   }
                                   <br /> <br />
                                <hr width="50%" color="green" />
                            </div>
                           
                        </div>
                    </div>
                </div>
             </div>
            
               
        }
         @if(User.Identity.IsAuthenticated && User.Identity.Name!="Admin"){
            <a class="btn btn-sm btn-success mb-4 mt-3" style="margin-left:500px" asp-controller="Blog" asp-action="Create">Create your own blog</a>
         }
</div>

<script>
    function confirmDelete(){
        return confirm("Are you sure you want to delete this blog");
    }
</script>